@require '_variables';

.text-field {
  &.disabled {
    .text-field-input {
      opacity: $opacity-disabled;
    }
  }
}

.text-field-input {
  border-radius: 4px;
  border: $border;
  box-shadow: inset 0 1px 4px rgba(0,0,0, 0.15);
  color: inherit;
  display: block;
  font-family: inherit;
  font-size: inherit;
  line-height: 1.5;
  margin: 0;
  outline: none;
  padding: 6px 9px;
  width: 100%;
  margin-top: $padding-small;

  &:focus {
    border: $border-focused;
  }

  &.has-error {
    border-color: red;
  }

  &.has-icon {
    padding-right: 30px;
  }
}

.text-field-input-icon-wrapper {
  positive: relative;

  .text-field-icon {
    position: absolute;
    top: 50%;
    right: 12px;
    margin-top: 6px;
    color: $color-text-1;
  }
}
