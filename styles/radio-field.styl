@require '_variables';

.radio-field {
  cursor: pointer;

  &.disabled {
    cursor: default;

    .radio-field-input {
      opacity: $opacity-disabled;
    }
  }
}

.radio-field-input {
  display: inline-block;
  height: 20px;
  width: 20px;
  background-image: linear-gradient(to top, $color-fill-1, white);
  border-radius: 10px;
  border: 1px solid $color-fill-3;
  position: relative;
  margin-right: $padding-small;

   &.is-selected {
    &::before {
      content: " ";
      display: inline-block;
      position: absolute;
      top: 5px;
      left: 5px;
      right: 5px;
      bottom: 5px;
      border-radius: 5px;
      background-color: $color-text-1;
    }
  }
}
