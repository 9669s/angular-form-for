@require '_variables';

.field-label {
  cursor: inherit;
  font-weight: normal;
}

.help-icon-stack {
  position: relative;

  .help-background-icon,
  .help-foreground-icon {
    text-align: center;
  }

  .help-background-icon {
    color: $color-fill-5;
  }
  .help-foreground-icon {
    color: white;
    position: absolute;
    left: 0;
  }
}
