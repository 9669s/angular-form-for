@require '_variables';

.submit-button {
  user-select: none;

  transition: $transition;

  border-radius: $border-radius;
  border-style: none;
  background-color: $color-fill-4;
  color: white;
  cursor: pointer;
  display: inline-block;
  font-size: 14px;
  font-weight: 400;
  line-height: 35px;
  outline: 0;
  padding: 0 25px;
  white-space: nowrap;

  &:hover, &:active {
    background-color: $color-fill-3;
    color: white;
  }

  &:active {
    background-color: $color-fill-5;
    transition: none;

    box-shadow: inset 0 1px 0 rgba(0,0,0, 0.25);
  }

  &.disabled,
  &:disabled {
    opacity: .5;
    cursor: default;
    box-shadow: none;

    &:hover, &:active {
      background-color: $color-fill-4;
    }
  }
}

.submit-button-icon {
  margin-right: 5px;
}
